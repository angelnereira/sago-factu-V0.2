# ========================================
# SAGO-FACTU - Variables de Entorno TEMPLATE
# ========================================
# 
# INSTRUCCIONES:
# 1. Copiar este archivo como .env: cp env.template .env
# 2. Rellenar todas las variables con valores reales
# 3. NUNCA subir .env o .env.example a Git
# ========================================

# ========================================
# DATABASE
# ========================================
# Neon PostgreSQL (Desarrollo y Producción)
# Obtener de: https://console.neon.tech/
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# ========================================
# NEON DATA API (Opcional - para Edge Runtime)
# ========================================
# Obtener de: Neon Console > Settings > API Keys
NEON_DATABASE_URL="https://your-endpoint.apirest.region.aws.neon.tech/database/rest/v1"

# ========================================
# NEXTAUTH.JS
# ========================================
# URL base de la aplicación
NEXTAUTH_URL="http://localhost:3000"

# Secret para JWT - Generar con: openssl rand -base64 32
NEXTAUTH_SECRET="tu-secret-key-aqui-generado-con-openssl"

# ========================================
# THE FACTORY HKA - INTEGRACIÓN
# ========================================

# Ambiente (demo o prod)
HKA_ENV="demo"

# ---- DEMO ENVIRONMENT ----
# URL del servicio SOAP de HKA Demo
HKA_DEMO_SOAP_URL="https://demoemision.thefactoryhka.com.pa/ws/obj/v1.0/Service.svc"

# Token de empresa demo (solicitar a HKA)
HKA_DEMO_TOKEN_USER="tu-token-demo"
HKA_DEMO_TOKEN_PASSWORD="tu-password-demo"

# URL REST de HKA Demo (opcional)
HKA_DEMO_REST_URL="https://demointegracion.thefactoryhka.com.pa"

# Usuario demo
HKA_DEMO_TOKEN_EMPRESA="tu-token-empresa-demo"
HKA_DEMO_USUARIO="demoemision"

# WSDL URL
HKA_DEMO_WSDL_URL="https://demoemision.thefactoryhka.com.pa/ws/obj/v1.0/Service.svc?wsdl"

# ---- PRODUCTION ENVIRONMENT ----
# Completar con credenciales de producción proporcionadas por HKA
HKA_PROD_SOAP_URL="https://produccion.thefactoryhka.com.pa/ws/obj/v1.0/Service.svc"
HKA_PROD_TOKEN_USER="tu-token-produccion"
HKA_PROD_TOKEN_PASSWORD="tu-password-produccion"
HKA_PROD_TOKEN_EMPRESA="tu-token-empresa-produccion"
HKA_PROD_USUARIO="tu-usuario-produccion"
HKA_PROD_WSDL_URL="https://produccion.thefactoryhka.com.pa/ws/obj/v1.0/Service.svc?wsdl"

# ========================================
# APP CONFIGURATION
# ========================================
NEXT_PUBLIC_APP_NAME="SAGO-FACTU"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# ========================================
# SUPER ADMIN - USUARIO INICIAL
# ========================================
# Credenciales del Super Admin (seed inicial)
SUPER_ADMIN_EMAIL="admin@sagofactu.com"
SUPER_ADMIN_PASSWORD="admin123"

# ========================================
# FEATURES FLAGS
# ========================================
ENABLE_EMAIL_NOTIFICATIONS="false"
ENABLE_WEBHOOKS="false"
ENABLE_API_KEYS="true"

# ========================================
# EMAIL SERVICE (Opcional - Resend)
# ========================================
# Obtener de: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxx"
EMAIL_FROM="noreply@sagofactu.com"

# ========================================
# AWS S3 (Opcional - Para almacenamiento de PDF/XML)
# ========================================
AWS_ACCESS_KEY_ID="tu-access-key"
AWS_SECRET_ACCESS_KEY="tu-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="sago-factu-storage"

# ========================================
# REDIS (Opcional - Para BullMQ)
# ========================================
# Upstash Redis para Vercel o Redis local
REDIS_URL="redis://localhost:6379"
# O para Upstash:
# REDIS_URL="rediss://default:password@host:port"

# ========================================
# MONITORING (Opcional)
# ========================================
# Sentry para error tracking
SENTRY_DSN="https://public@sentry.io/project-id"

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="tu-analytics-id"

